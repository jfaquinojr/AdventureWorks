@model JFA.AdventureWorks.Web.ViewModel.IndexPager<JFA.AdventureWorks.Entities.Person>

@{
    ViewBag.Title = "Index";
}

<h2>People</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TheClass.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TheClass.LastName)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.TheList)
        {
            <tr id="tr-id-@item.BusinessEntityID" class="clickable-row" data-id="@item.BusinessEntityID">
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
            </tr>
        }
    </tbody>

</table>


@Html.Partial("_Pager", Model)


@section scripts{

    <script>

    $(function () {

        $('.clickable-row').click(function () {
            alert($(this).data('id'));
        })

    })

    </script>

}